// manifest.json (Firefox Compatible)
{
  "manifest_version": 3,
  "name": "Kemono EPUB Creator",
  "version": "1.2.0",
  "description": "Generate EPUBs from Kemono.cr posts in a new tab.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://kemono.cr/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://kemono.cr/*",
    "https://img.kemono.cr/*",
    "*://*.kemono.cr/*"
  ]
}
